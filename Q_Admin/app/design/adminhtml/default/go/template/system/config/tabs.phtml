<?php if($this->getTitle()): ?>
    <h3><?php echo $this->getTitle() ?></h3>
<?php endif ?>
<?php if($this->getTabs()): ?>
<ul id="<?php echo $this->getId() ?>" class="tabs config-tabs">

    <?php $z=0?>

<?php foreach ($this->getTabs() as $_tab): ?>
    <?php if($_tab->getSections()): ?>
    <li <?php if ($_tab->getClass()): ?>class="<?php echo $_tab->getClass() ?>"<?php endif ?>>
        <dl>
        <dt class="label config_tab config_tab_<?php echo $z; ?>"><span></span><?php echo $_tab->getLabel() ?></dt>
        <?php $_iterator = 1; ?>
        <?php $x=0?>
        <div class="subtabs" style="display: none;">
        <?php foreach ($_tab->getSections() as $_section): ?>
            <dd class="config_subtab_<?php echo $z; ?>_<?php echo $x++; ?> <?php if($_section->getId()==$this->getActiveSection()): ?> active<?php endif ?> ">
                <a href="<?php echo $_section->getUrl() ?>" class="<?php echo $_section->getClass() ?><?php echo $_section->getIsLast()?'last':'' ?>">
                    <span <?php if($_tab->getId()==$this->getActiveTab()): ?>class="active"<?php endif ?>>
                        <?php if($_section->getId()==$this->getActiveSection()): ?><!--<i class="icon-circle-arrow-right"></i>--> <?php endif ; ?>
                        <?php echo $_section->getLabel() ?>
                    </span>
                </a>
            </dd>
            <?php $_iterator++ ; ?>
        <?php endforeach; ?>
            </div>
            <?php $z++?>
        </dl>
    </li>
    <?php endif; ?>
<?php endforeach; ?>
</ul>
<?php endif; ?>

<script>
    jQuery('.config_tab').click(function(){
        jQuery(this).next('.subtabs').slideToggle("slow");
        jQuery(this).toggleClass('active');
    })
    jQuery( document ).ready(function() {

        if ( jQuery('dd').parent('.subtabs').css('display') == 'block' ) {
            alert('visible');
        }

        jQuery('dd.active').parent('.subtabs').show();
        jQuery('dd.active').parent('.subtabs').addClass('active');
        jQuery('dd.active').parent().parent('dl').addClass('active');

    });
</script>
